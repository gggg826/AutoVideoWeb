# Environment Variables Template
# Copy this file to .env and fill in your values
# Note: All settings have default values, .env file is optional

# Application Configuration
APP_NAME=AdAlliance Tracker
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
# Default: sqlite+aiosqlite:///./data/tracker.db
DATABASE_URL=sqlite+aiosqlite:///./data/tracker.db

# Security Configuration
# IMPORTANT: Change these in production!
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123
# Token expiration time in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Cache Configuration
CACHE_TTL=300
MAX_EXPORT_ROWS=10000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
